---
import "@fontsource/dancing-script";
import { SEO } from "astro-seo";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <SEO
      title={title}
      charset="UTF-8"
      description="Bellezza di Em est une entreprise individuelle de prothésie ongulaire située à Cergy."
      extend={{
        link: [
          { rel: "icon", type: "image/png", href: "/favicon.png" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
        ],
        meta: [
          {
            name: "viewport",
            content: "width=device-width",
          },
          {
            name: "generator",
            content: Astro.generator,
          },
        ],
      }}
    />
    <ViewTransitions />
  </head>
  <body class="bg-bellezzadiem-bg text-bellezzadiem-text">
    <slot />
  </body>
</html>
