---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Icon from "astro-icon";
---

<Layout title="Bellezza di Em">
  <main class="h-screen flex items-center">
    <div class="mx-auto text-center flex items-center flex-col gap-2">
      <Header />
      <div class="flex flex-row gap-1">
        <a href="https://instagram.com/bellezzadi_em">
          <Icon name="mdi:instagram" size={40} />
        </a>
        <a href="mailto:hello@bellezzadiem.fr">
          <Icon name="mdi:at" size={40} />
        </a>
      </div>
      <div class="absolute bottom-2">
        <Footer />
      </div>
    </div>
  </main>
</Layout>
